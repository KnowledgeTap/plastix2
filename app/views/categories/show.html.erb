<% @categories.each do |category| %>
  	<% if category.parentid == @category.id %>
  		
  			<!-- <% @subcategories << category.name %>-->
  		
			<% catArray.push(category.name) %>
	<% end %>
	<% end %>

			<% unless catArray.empty? %>
				<%= catArray.join(", ") %>
			<% end %>
			

<% end %>  		
  		
  		
  		
  		
  		
  		
  		
  	
