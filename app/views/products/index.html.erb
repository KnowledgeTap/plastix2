<h1>Listing products</h1>

<table>
  <tr>
    <th>Parentid</th>
    <th>Name</th>
    <th>Model</th>
    <th>Ports</th>
    <th>Valve</th>
    <th>Color</th>
    <th>Price</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.parentid %></td>
    <td><%= product.name %></td>
    <td><%= product.model %></td>
    <td><%= product.ports %></td>
    <td><%= product.valve %></td>
    <td><%= product.color %></td>
    <td><%= product.price %></td>
    <td><%= product.category_id %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= button_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

