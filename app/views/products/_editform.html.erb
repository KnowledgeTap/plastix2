<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  

  <div class="field">
    <!-- <%= f.label :parentid %><br /> -->
    <% if !@productname.nil? %>
    <%= f.hidden_field :parentid %>
    <% else %>
    <%= f.hidden_field :parentid %>
    <% end %>
    
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <% if !@productname.nil? %>
    <%= f.text_field :name, :value => @productname.name %>
    <% else %>
    <%= f.text_field :name %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <% if !@productname.nil? %>
    <%= f.text_area :name, :value => @productname.description %>
    <% else %>
    <%= f.text_area :description %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :ports %><br />
    <%= f.text_field :ports %>
  </div>
  <div class="field">
    <%= f.label :valve %><br />
    <%= f.text_field :valve %>
  </div>
  <div class="field">
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <!-- <%= f.label :category_id %><br />  -->
    <% if !@productname.nil? %>
    <%= f.hidden_field :category_id, :value => @productname.category_id %>
    <% else %>
    <%= f.hidden_field :category_id %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
